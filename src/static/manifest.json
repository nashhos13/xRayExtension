{
  "name": "xRay Extension",
  "description": "Endpoint rerouting service extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "xRay Extension",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "contextMenus", "scripting", "tabs"],
  "host_permissions": ["https://api.tryxray.ai/"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"], 
      "js": ["contentScript.js"]
    }
  ]
}


