{
  "name": "xRay - Amazon Price Comparison",
  "description": "Find better deals while shopping on Amazon. Scan products to discover lower prices from alternative sources and save money on your purchases.",
  "version": "1.0.0",
  "homepage_url": "https://tryxray.ai",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "xRay Extension NEW",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "contextMenus", "activeTab"],
  "host_permissions": ["https://api.tryxray.ai/"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*", 
        "*://*.amazon.ca/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.in/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.com.br/*",
        "*://tryxray.ai/*"
      ], 
      "js": ["contentScript.js"],
      "css": ["contentScript.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}


